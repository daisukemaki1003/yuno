# Project configuration
PROJECT_ID=your-project-id
REGION=asia-northeast1

# KMS configuration
KMS_KEY_NAME=projects/YOUR_PROJECT/locations/YOUR_REGION/keyRings/YOUR_KEYRING/cryptoKeys/YOUR_KEY

# External service URLs
MEETING_BAAS_BASE_URL=https://api.example.com

# Meeting BaaS configuration (optional - defaults shown)
# MEETING_BAAS_API_VERSION=v1
# MEETING_BAAS_AUTH_HEADER=x-meeting-baas-api-key
# MEETING_BAAS_AUTH_SCHEME=None
# MEETING_BAAS_TIMEOUT_REQUEST_MS=15000
# MEETING_BAAS_TIMEOUT_STREAM_MS=600000
# MEETING_BAAS_STREAM_PROTOCOL=sse

# Local development (optional)
# FIRESTORE_EMULATOR_HOST=localhost:8080

# Mock server configuration
MOCK_PORT=4010
MOCK_SCENARIO=default  # default | rate_limit | flaky | slow | auth_required
MOCK_RATE_LIMIT_N=2
MOCK_FLAKY_K=1
MOCK_STREAM_DURATION_MS=60000

# ストリームプロトコルをws-relayモードに設定
MEETING_BAAS_STREAM_PROTOCOL=ws-relay

# Gladia API設定
GLADIA_API_KEY=your-gladia-api-key-here
PUBLIC_WS_BASE=wss://your-domain.com  # 本番環境のWebSocket URL

# WebSocketリレー設定（オプション）
STREAM_RECONNECT_BASE_MS=5000          # 再接続の基本待機時間（ms）
STREAM_BACKPRESSURE_MAX_BUFFER=5242880 # バックプレッシャーの最大バッファサイズ（5MB）
