{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "start": "node --enable-source-maps ./dist/index.js",
    "lint": "eslint . --ext .ts",
    "postbuild": "cp package.prod.json ./dist/package.json && cd dist && npm install --package-lock-only",
    "serve": "functions-framework --target=helloGET --source=dist/index.js --port=8080",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "@hono/node-server": "^1.19.1",
    "chalk": "^5.6.0",
    "dotenv": "^17.2.2",
    "eventsource-parser": "^3.0.6",
    "hono": "^4.9.6",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
